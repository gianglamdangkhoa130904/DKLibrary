<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main"
    tools:context=".Customer.ForgotPassword.InputGmailToResetActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="@color/element_main"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Mời nhập gmail bạn đã đăng ký"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/warning_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/gmail_to_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="text"
        android:hint="Gmail"
        android:padding="20dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/confirm_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Xác nhận email"
        android:layout_marginTop="20dp"/>
</LinearLayout>