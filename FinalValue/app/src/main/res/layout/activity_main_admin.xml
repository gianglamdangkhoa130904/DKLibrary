<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.MainAdminActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbarAdmin"
        app:title="Admin Site"
        app:titleCentered="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/element_main"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/admin_fm_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/admin_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_nav"
        app:menu="@menu/admin_bottom_nav"/>
</LinearLayout>