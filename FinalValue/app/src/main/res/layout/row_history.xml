<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/main_history_layout">
    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/get_image_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tt_dragon_ball"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/get_name_history"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="7 viên ngọc rồng"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_gravity="center"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/get_viewer_history"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="Đã xem: 3 lần"
        android:textColor="@color/black"/>
</LinearLayout>