<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/admin_book_row_layout">
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp">
                <ImageView
                    android:id="@+id/get_book_admin_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tt_one_piece"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/get_book_admin_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ID: "
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/get_book_admin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Name: "
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/get_book_admin_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Author: "
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/get_book_admin_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Chapter: "
                    android:textSize="20dp"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:id="@+id/get_book_admin_dateRelease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Release Date: "
                    android:textSize="20dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>